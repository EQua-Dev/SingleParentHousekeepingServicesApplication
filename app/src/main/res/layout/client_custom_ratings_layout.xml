<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="@dimen/padding_mini"
    android:layout_margin="@dimen/padding_mini"
    app:cardCornerRadius="@dimen/padding_mini">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/padding_mini"
        android:padding="@dimen/padding_mini">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/date/ddmmyy"
            android:id="@+id/txt_client_rate_invoice_date_generated"
            android:padding="@dimen/padding_mini"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/date/hhmm"
            android:id="@+id/txt_client_rate_invoice_time_generated"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/padding_mini"/>


<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                tools:text="3.5"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:padding="@dimen/padding_midi"-->
<!--                android:layout_below="@id/txt_client_rate_invoice_time_generated"-->
<!--                android:id="@+id/txt_client_service_rating"-->
<!--                app:drawableTopCompat="@drawable/ic_star_rate" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/full_names"
            android:id="@+id/txt_client_rate_invoice_facility_name"
            android:layout_below="@id/txt_client_rate_invoice_date_generated"
            android:padding="@dimen/padding_mini"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/button_width_xxl"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/client_notification_rate_btn"
            android:textStyle="italic"
            android:backgroundTint="@color/custom_client_accent_color"
            android:id="@+id/btn_client_rate_invoice_generated"
            android:layout_below="@id/txt_client_rate_invoice_service_type"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/padding_mini"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Palliative Rehabilitation"
            android:layout_below="@id/txt_client_rate_invoice_facility_name"
            android:id="@+id/txt_client_rate_invoice_service_type"
            android:padding="@dimen/padding_mini"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>

