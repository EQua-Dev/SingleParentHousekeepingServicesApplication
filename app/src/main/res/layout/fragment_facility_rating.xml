<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".facility.facilityrating.FacilityRating">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rating_title"
        android:textSize="@dimen/text_xl"
        android:textAlignment="center"
        android:layout_margin="@dimen/margin_midi"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_mini"
            android:layout_marginEnd="@dimen/padding_mini"
            android:padding="@dimen/padding_mini"
            android:hint="@string/sign_up_facility_name"
            android:textColorHint="@color/custom_facility_accent_color">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/sign_up_first_name"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_sign_up_facility_email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_mini"
            android:layout_marginEnd="@dimen/padding_mini"
            android:padding="@dimen/padding_mini"
            android:hint="@string/sign_up_facility_email"
            android:textColorHint="@color/custom_facility_accent_color">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sign_up_facility_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/sign_up_facility_email"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:labelFor="@id/sign_up_facility_email" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_sign_up_facility_phone_number"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_mini"
            android:layout_marginEnd="@dimen/padding_mini"
            android:padding="@dimen/padding_mini"
            android:hint="@string/sign_up_facility_phone_number"
            android:textColorHint="@color/custom_facility_accent_color">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sign_up_facility_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/sign_up_facility_phone_number"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="11"
                android:labelFor="@id/sign_up_facility_phone_number" />
        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_mini"
            android:layout_marginEnd="@dimen/padding_mini"
            android:padding="@dimen/padding_mini"
            android:hint="@string/rating_customer_name"
            android:textColorHint="@color/custom_facility_accent_color">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/sign_up_facility_phone_number"
                android:importantForAutofill="no"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rate_text"
            android:padding="@dimen/padding_mini"
            android:layout_margin="@dimen/padding_mini"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/margin_midi">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_star_rate"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_star_rate"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_star_rate"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_star_rate"/>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_mini"
            android:layout_marginEnd="@dimen/padding_mini"
            android:padding="@dimen/padding_mini"
            android:hint="@string/sign_up_facility_phone_number"
            android:textColorHint="@color/custom_facility_accent_color">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/rating_feedback_prompt"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:lines="4"
                android:labelFor="@id/sign_up_facility_phone_number" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:layout_width="@dimen/button_width_xxl"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_mini"
            android:layout_marginTop="@dimen/padding_mini"
            android:layout_marginEnd="@dimen/padding_mini"
            android:layout_marginBottom="@dimen/padding_mini"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/custom_facility_accent_color"
            android:padding="@dimen/padding_mini"
            android:text="@string/feedback_submit" />




    </LinearLayout>

</RelativeLayout>